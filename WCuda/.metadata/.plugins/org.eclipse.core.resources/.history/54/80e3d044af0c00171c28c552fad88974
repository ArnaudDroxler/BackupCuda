/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

__global__ void fractale(uchar4* ptrDevPixels,uint w, uint h,float t);

__global__ void set

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

__global__ void fractale(uchar4* ptrDevPixels, uint w, uint h, float t)
    {
    FractaleMath* fractaleMath = getFractaleMath(); // ici pour preparer cuda
    fractaleMath->setN(t);

    const int WH=w*h;
    const int TID = Indice2D::tid();
    const int NB_THREAD = Indice2D::nbThread();

    int i;	// in [0,h[
    int j; 	// in [0,w[

    int s = TID;  // in [0,...
    while (s < WH)
	{
	IndiceTools::toIJ(s, w, &i, &j); 	// update (i, j)

	fractaleMath->colorIJ(&ptrDevPixels[s],i, j, t); 	// update ptrDevPixels[s]

	s += NB_THREAD;
	}
    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

